{% extends 'base.html.twig' %}

{% block title %}Homepage
{% endblock %}

{% block body %}

    <h3 class="my-3">Welcome to our shop</h3>
    <p class=" lead my-3">Have a look at our last three articles.</p>

	{% for article in articles %}

		<div class="card mt-3">
			<h5 class="card-header">{{ article.title }}</h5>
			<div class="card-body">
				<p class="card-text">{{ article.content }}</p>
			</div>
			<div class="card-footer text-muted">

				{% if article.createdAt == article.updatedAt %}
					Creation date:
					{{ article.createdAt|date('Y-m-d H:i') }}
				{% else %}
					Creation date:
					{{ article.createdAt|date('Y-m-d H:i') }}, last updated:
					{{ article.updatedAt|date('Y-m-d H:i') }}
				{% endif %}

				{% if article.author %}
					by {{ article.author }}
				{% endif %}
			</div>
		</div>

	{% endfor %}
{% endblock %}
